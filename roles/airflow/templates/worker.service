[Unit]
Description=Airflow celery worker daemon

[Service]
EnvironmentFile={{ airflow_home }}/airflow.cfg
User={{ airflow_user }}
Group={{ airflow_group }}
Type=simple
ExecStart=/usr/local/bin/airflow worker --pid {{ airflow_pidfile_folder }}/worker.pid
KillSignal=SIGINT
Restart=on-failure
RestartSec=10s
RuntimeDirectory=airflow

[Install]
WantedBy=multi-user.target
